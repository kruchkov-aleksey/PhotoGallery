<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <import type="android.view.View"/>
        <variable
            name="photoViewModel"
            type="com.example.photogallery.presentation.photo.PhotoViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/photo_image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/photo_image_height_size"
                android:transitionName="image"
                android:scaleType="centerCrop"
                tools:targetApi="lollipop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "@{photoViewModel.photo.title}"
                android:layout_below="@id/photo_image_view"
                android:gravity="center"
                android:maxLength="10"
                android:maxLines="1"
                android:layout_margin="8dp"
                android:textSize="@dimen/subheading2"
                android:ellipsize="end"
                android:textColor="@color/colorTextPrimary" />

            <ProgressBar
                android:id="@+id/photo_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>